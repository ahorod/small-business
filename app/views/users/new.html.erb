<div class="row">
  <div class="col-md-4">

  </div>
  <div class="col-md-4">
    <h1> Sign up</h1>
    <%= simple_form_for @user do |f| %>
      <%= f.error_notification %>
      <%= f.input :email %>
      <%= f.input :user_name %>
      <%= f.input :password, as: :password %>
      <%= f.input :password_confirmation, as: :password %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
